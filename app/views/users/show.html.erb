<% provide(:title, @user.name) %>

<div class="col-md-6 col-md-offset-3">
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <th>ID</th>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <th>名前</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>管理者権限</th>
      <td>
        <% if @user.admin? %>
          〇
        <% else %>
          ✕
        <% end %>
      </td>
    </tr>
    <tr>
      <th>キッチン</th>
      <td>
        <% if @user.kitchen? %>
          〇
        <% else %>
          ✕
        <% end %>
      </td>
    </tr>
    <tr>
      <th>ホール</th>
      <td>
        <% if @user.hole? %>
          〇
        <% else %>
          ✕
        <% end %>
      </td>
    </tr>
    <tr>
      <th>洗い場</th>
      <td>
        <% if @user.wash? %>
          〇
        <% else %>
          ✕
        <% end %>
      </td>
    </tr>
    <tr>
      <% if !current_user?(@user) %>
        <th>時給</th>
        <td>¥<%= @user.hourly_wage %></td>
      <% end %>
    </tr>
  </table>
</div>