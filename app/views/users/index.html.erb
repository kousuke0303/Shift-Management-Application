<% provide(:title, "All Users") %>
<h1>ユーザー一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <%= will_paginate %>
  <table class="table table-bordered table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th>名前</th>
        <th>メールアドレス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= user.email %></td>
          <td>
            <% if current_user.admin? && !current_user?(user) %>
              <%= link_to "スタッフ情報編集", edit_user_info_user_path(user), remote: true, class: "btn btn-primary" %>
              <%= link_to "削除", user, method: :delete,
                  data: { confirm: "削除してよろしいですか？" },
                  class: "btn btn-danger" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate %>
</div>

<!-- モーダルウィンドウ表示 -->
<div id="edit_user_info" class="modal fade" tabindex="-1" rule="dialog" area-hidden="true"></div>