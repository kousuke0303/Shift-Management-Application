<% provide(:title, 'パスワード再設定') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">✖︎</span>
      </button>
      <h1 class="modal-title">パスワード再設定</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
         <%= form_with(model: @user, url: update_password_reset_user_path, local: true, method: :patch) do |f| %>
       
           <%= f.label "パスワード", class: "label-passdword-reset" %>
           <%= f.password_field :password, class: 'form-control' %>
       
           <%= f.label :password_confirmation, "パスワード再入力", class: "label-passdword-reset" %>
           <%= f.password_field :password_confirmation, class: 'form-control' %>
       
           <%= f.submit "更新", class: "btn btn-primary btn-block btn-password-reset" %>
         <% end %>
        </div>
      </div>
    </div>
  </div>
</div>